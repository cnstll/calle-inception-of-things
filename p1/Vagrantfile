require 'yaml'

current_dir = File.dirname(File.expand_path(__FILE__))
vagrant_config = YAML.load_file("#{current_dir}/config.yaml")

Vagrant.configure("2") do |config|
  config.vm.define "calleS" do |server|
    server.vm.box = vagrant_config["box"]
    server.vm.hostname = "calleS"
    server.vm.synced_folder ".shared/", "/home/vagrant/"
    server.vm.network "private_network", ip: vagrant_config["server"]["ip"]
    server.vm.network "forwarded_port", id: "ssh", guest: 22, host: 2201
    server.ssh.insert_key = false
    # server.ssh.private_key_path = vagrant_config["ssh_private_key_path"]
    server.vm.provider "virtualbox" do |vb|
      vb.name = "calleS"
      vb.memory = 512
      vb.cpus = 1
    end
    # server.vm.provision "shell", path: vagrant_config["server"]["script_path"]
  end

  config.vm.define "calleSW" do |server_worker|
    server_worker.vm.box = vagrant_config["box"]
    server_worker.vm.hostname = "calleSW"
    server_worker.vm.network "private_network", ip: vagrant_config["server_worker"]["ip"]
    server_worker.vm.network "forwarded_port", id: "ssh", guest: 22, host: 2202
    server_worker.vm.synced_folder ".shared/", "/home/vagrant/"
    server_worker.ssh.insert_key = false
    # server_worker.ssh.private_key_path = vagrant_config["ssh_private_key_path"]
    server_worker.vm.provider "virtualbox" do |vb|
      vb.name = "calleSW"
      vb.memory = 512
      vb.cpus = 1
    end
    # server_worker.vm.provision "shell", path: vagrant_config["server_worker"]["script_path"]
  end

  # config.vm.provision "shell", args: vagrant_config['ssh_public_key'], inline: <<-SHELL
  #   echo "PUBKEY: $1"
  #   echo "$1"  >> /home/vagrant/.ssh/authorized_keys
  
  # SHELL
end